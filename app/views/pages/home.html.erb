<div class="container mx-auto py-10">
  <!-- ... -->

  <h1 class="mx-auto text-center text-2xl">QR Code Generator</h1>

    <h2>StimulusReflex</h2>
  <div class="border-gray-400 border w-1/6 p-5">
    <h1 class="mb-3 cursor-pointer bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" data-reflex="click->Example#toggle" data-id="1" data-step="1"
    data-count="<%= @count.to_i %>">Click here</h1>
    <span class="py-2 px-4 "> Increment <%= @count.to_i %></span>
  </div>

  <br>

  <div class="grid grid-cols-2 gap-4 mt-20" data-controller="form">
    <div  class="mx-32 text-left">
      <h1 class="text-xl">1. Add Restaurant</h1>
      <hr class="mt-3 w-full">
      <%= render 'pages/add_restaurant' %>

      <h1 class="text-xl">2. Add Category</h1>
      <hr class="mt-3 w-full"


      <%= render(CategoryComponent.new(data: { wrapper_id: 1, input_id: 1, delete_id: 1 })) %>

      <p class="text-link hover:text-teal-900" data-count="<%= @category_count.to_i %>" data-reflex="click->Example#add_category">add category</p>

      <%#= render 'pages/add_category' %>


      <h1 class="text-xl mt-5">3. Add Menu Item</h1>
      <hr class="mt-3 w-full">
      <%= render 'pages/add_item' %>
    </div>

    <div class="mx-auto text-center">
      <div class="iphone style-1">
        <div class="iphone__details"></div>
        <div class="iphone__screen">
          <div class="iphone__content" data-target="form.iphone_content">
            <div class="pt-5 text-2xl"data-target="form.restaurant">Casa Alberto</div>
            <div data-target="form.category_print" class="flex flex-row space-x-2 pl-4">
              <div class="mt-3" data-id="1"><%= @category_name %></div>
            </div>
            <hr class="mt-5 border-gray-300 w-48 mx-auto">
            <div class="pl-4 text-left" data-target="form.item_print">
              <div class="mt-3" data-id="1">Spaghetti</div>
              <div class="font-thin text-xs pr-4" data-id-description="1">sauce based on 40y old family recipe</div>
              <div class="" data-id-price="1">$5</div>
            </div>
          </div>
        </div>
        <div class="iphone__home-btn"></div>
      </div>

    </div>
  </div>


</div>
