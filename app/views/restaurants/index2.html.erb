<div class="py-6 bg-white">
  <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8">
    <div class="xs:text-left sm:text-center">
      <p class="leading-6 text-teal-600 font-semibold tracking-wide uppercase">Free</p>
      <h3 class=" page-title sm:text-4xl sm:leading-10">
        QR Code Creator
      </h3>
    </div>
    <div class="mt-10">
      <%= render "features" %>
    </div>
  </div>
</div>

<div class="text-center my-8 mx-auto">
  <div class="text-red-500 pt-6 md:w-2/3 mx-auto lg:w-1/3 rounded-md font-semibold text-3xl w-auto">Create your menu in 3 simple steps! ðŸ‘‡</div>
  <div class="mt-2 text-base leading-6 text-gray-600">To create menu, view website on laptop or desktop</div>
  <div class="mt-5">
    <%= link_to "Create Your Own QR-Menu", new_restaurant_url, class:"btn-red hover:bg-transparent hover:text-teal-700"  %>
  </div>
</div>
<div class="container mobile-view-text hidden mx-auto" >
  <div class="border-b border-gray-300 p-5 text-lg"></div>
  <div class=""></div>
  <%= render "phone", restaurant: @restaurant %>
</div>

<section class="container max-w-screen-xl mt-16 mx-auto text-center mobile-view">

  <div class="flex">
    <!-- LEFT Col-->
    <div class="w-1/3 space-y-5 pt-20 flex flex-col items-end">
      <div class="handwriting">2. <br>
        Add categories</div>
      <div class="flex justify-center">
        <%= image_tag "arrows/arrow_26.svg", class:"arrow two" %>
      </div>
    </div>

    <!-- MIDDLE Col-->
    <div class="w-1/3">
      <%= render "phone", restaurant: @restaurant %>
    </div>

    <!-- RIGHT Col-->
    <div class="w-1/3 space-y-56 flex flex-col items-start">
      <div>
        <div class="handwriting">1. <br>
          Add restaurant</div>
        <%= image_tag "arrows/arrow_36.svg", class:"arrow one w-20" %>
      </div>

      <div>
        <%= image_tag "arrows/arrow_26.svg", class:"arrow three" %>
        <div class="handwriting">3. <br>
          Add menu items</div>
      </div>
    </div>
  </div>
</section>


<section class="text-center mx-auto my-16">
  <h1 class="text-3xl">Scan example menu</h1>
  <div>
    <%= link_to "click here for example", restaurant_url(@restaurant), class:"text-link" %>
  </div>

  <div class="my-3 flex mobile-view">
    <div class="w-5/12 flex justify-end items-center">
      <div class="handwriting">Try it out! ðŸ“·</div>
      <%= image_tag "arrows/arrow_44", class:"arrow four ml-5" %>
    </div>
    <div class="w-2/12 svg-wrapper "><%= @svg.html_safe%></div>
    <div class="w-5/12"></div>
  </div>

  <div class="my-10 mobile-view">
    <%= link_to "Create Your Own QR-Menu", new_restaurant_url, class:"btn-teal hover:bg-transparent hover:text-teal-700"  %>
  </div>

</section>


<style>
  .svg-wrapper > svg{
    display: unset;
  }

  .handwriting {
  font-family: "Gochi Hand";
  font-size: 34px;
  }

  .arrow.one {
  transform: rotate(295deg);
  }

  .arrow.two {
    transform: rotate(245deg);
  }

  .arrow.three {
    transform: rotate(418deg);
  }

  .arrow.four {
  }

  @media (max-width: 1024px) {
    .mobile-view-text {
      display: block;
    }
    .mobile-view {
      display: none;
  }
  }
</style>
