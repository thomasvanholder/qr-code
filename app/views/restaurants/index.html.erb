<div class="py-12 bg-white">
  <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <p class="text-base leading-6 text-teal-600 font-semibold tracking-wide uppercase">Free</p>
      <h3 class="page-title sm:text-4xl sm:leading-10">
        QR Code Creator
      </h3>
    </div>
    <div class="mt-10">
      <%= render "features" %>
    </div>
  </div>
</div>


<section class="container max-w-screen-xl mx-auto text-center">
  <h1 class="text-3xl mb-5">Create your own menu in 3 simple steps!</h1>


  <div class="flex">
    <div class="w-1/3 space-y-5 pt-20 flex flex-col items-end">
      <div class="handwriting">2. <br>
        Add categories</div>
      <div class="flex justify-center">
        <%= image_tag "arrows/arrow_26.svg", class:"arrow two" %>
      </div>
    </div>


    <div class="w-1/3">
      <%= render "phone", restaurant: @restaurant %>
    </div>


    <div class="w-1/3 space-y-56 flex flex-col items-start">
      <div>
        <div class="handwriting">1. <br>
          Add restaurant</div>
          <%= image_tag "arrows/arrow_36.svg", class:"arrow one w-20" %>
      </div>

      <div>
        <%= image_tag "arrows/arrow_26.svg", class:"arrow three" %>
        <div class="handwriting">3. <br>
          Add menu items</div>
      </div>
    </div>
  </div>

</section>

<section class="text-center mx-auto my-24">
  <h1 class="text-3xl">Scan live menu on your phone</h1>
  <div>
    <a href="" class="text-link">or click here</a>
  </div>

  <div class="my-3 flex">
    <div class="w-5/12 flex justify-end items-center">
       <div class="handwriting">Try it out! ðŸ“·</div>
      <%= image_tag "arrows/arrow_44", class:"arrow four ml-5" %>
    </div>
    <div class="w-2/12 svg-wrapper "><%= @svg.html_safe%></div>
    <div class="w-5/12"></div>
  </div>

  <div class="my-10">
    <%= link_to "Get Started", restaurant_url(@restaurant), class:"btn-teal hover:bg-transparent hover:text-teal-700"  %>
  </div>
</section>


<style>
  .svg-wrapper > svg{
    display: unset;
  }

  .handwriting {
  font-family: "Gochi Hand";
  font-size: 34px;
  }

  .arrow.one {
  transform: rotate(295deg);
  }

  .arrow.two {
    transform: rotate(245deg);
  }

  .arrow.three {
    transform: rotate(418deg);
  }

